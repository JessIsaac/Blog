<%= render 'shared/errors', obj:@user %>
<!--we use the form html but with a little changes to use it in the signup view -->
       <div class = 'row'>
           <div class ='col-xs-12'>
                <%= form_for(@user, :html => {class: "form-horizontal", role: "form"}) do |a| %>
                    <div class = "form-group">
                        <div class = "control-label col-sm-2">
                            <%= a.label :username %>
                        </div>
                        <div class = "col-sm-8">
                        <%= a.text_field :username, class: "form-control", placeholder: "Enter Username", autofocus: true %>
                        </div>
                    </div>
                    <div class = "form-group">
                        <div class = "control-label col-sm-2">
                        <%= a.label :email %>
                        </div>
                        <div class ="col-sm-8">
                        <%= a.email_field :email,class: "form-control", placeholder:"Enter Email" %>
                        </div>
                    </div>
                     <div class = "form-group">
                        <div class = "control-label col-sm-2">
                        <%= a.label :password %>
                        </div>
                        <div class ="col-sm-8">
                        <%= a.password_field :password, class: "form-control", placeholder:"Enter Password" %>
                        </div>
                    </div>
                    <div class = "form-group">
                        <div class = "col-sm-offset-2 col-sm-10">
                            <%= a.submit(@user.new_record? ? "Sign Up" : "Update Account", class: 'btn btn-primary btn-lg') %>
                        </div>
                    </div>
                <% end %>
                <div class = "col-xs-2 col-xs-offset-8">
                    [<%= link_to "Back to articles list", articles_path %>]
                </div>
            </div>
        </div>
