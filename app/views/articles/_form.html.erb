
        
        <% if @article.errors.any? %>
        <h2>List of Possible Errors </h2>
        <ul>
            <% @article.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
            <%end%>
        </ul>
        <% end %>
       
        <%= form_for @article do |a| %>
            <p>
                <%= a.label :title %><br/>
                <%= a.text_field :title %>
            </p>
            <p>
                <%= a.label :description %><br/><br/>
                <%= a.text_area :description, size: "80x10" %>
            </p>
            <p>
                <%= a.submit %>
            </p>
        <% end %>
        <br/>
        <%= link_to "Back to articles list", articles_path %>
