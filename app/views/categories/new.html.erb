<h1 align = "center">Create New Category</h1>
<%= render 'shared/errors', obj: @category %>
<!--we use the form html but with a little changes to use it in the signup view -->
   
                <%= form_for(@category, :html => {class: "form-horizontal", role: "form"}) do |a| %>
                    <div class = "form-group">
                        <div class = "control-label col-sm-2">
                            <%= a.label :name %>
                        </div>
                        <div class = "col-sm-8">
                        <%= a.text_field :name, class: "form-control", placeholder: "Enter Category", autofocus: true %>
                        </div>
                    </div>
                    <div class = "form-group">
                        <div class = "col-sm-offset-2 col-sm-10">
                            <%= a.submit class: 'btn btn-primary btn-lg' %>
                        </div>
                    </div>
                <% end %>
                <div class = "col-xs-2 col-xs-offset-8">
                    [<%= link_to "Back to articles list", articles_path %>]
                </div>
